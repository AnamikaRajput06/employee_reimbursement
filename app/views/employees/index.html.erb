<%if notice.present? %>
  <p style="color: green"><%= notice %></p>
<%end%>
<div class="d-flex justify-content-between align-items-center mb-4">

  <h1>Employees</h1>

  <div>
    <%= link_to "New", new_employee_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-striped table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">Full Name</th>
      <th scope="col">Designation</th>
      <th scope="col">Department</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr style="vertical-align: middle">
        <td><%= employee.full_name %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.department_name %></td>
        <td>
          <div class="d-flex" style="width: 0">

            <%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-outline-primary' %>
            <%= button_to "Delete", employee, method: :delete, class: 'btn btn-outline-danger mx-2' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%if notice.present? %>
  <p style="color: green"><%= notice %></p>
<%end%>
<div class="d-flex justify-content-between align-items-center mb-4">

  <h1>Bills</h1>

  <div>
    <%= link_to "New", new_bill_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="table-responsive">


  <table class="table table-striped table-bordered">
    <thead class="thead-light">
      <tr>
        <th scope="col">Type</th>
        <th scope="col">Amount</th>
        <th scope="col">Date of Submission</th>
        <th scope="col">Submitter</th>
        <th scope="col">Department</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @bills.each do |bill| %>
        <tr style="vertical-align: middle">
          <td><%= bill.bill_type.humanize %></td>
          <td><%= bill.amount %></td>
          <td><%= bill.created_at.strftime("%d-%m-%Y") %></td>
          <td><%= bill.employee_full_name %></td>
          <td><%= bill.employee_department_name %></td>
          <td>
            <div class="d-flex">

              <%= link_to 'Edit', edit_bill_path(bill), class: 'btn btn-outline-primary' %>
              <%= button_to "Delete", bill, method: :delete, class: 'btn btn-outline-danger mx-2' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
